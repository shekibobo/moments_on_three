- title "Order"

%p
  %strong User:
  = @order.user.email

%p
  %strong Order Items:
  %ul
    - for item in @order_items
      %li
        = item.print + " " + number_to_currency(item.cost)


.control
  = edit_button_for [ @order ]
  = delete_button_for [ @order ], :confirm => "Are you sure you want to clear this order?"
  = link_to button(:back), :orders
