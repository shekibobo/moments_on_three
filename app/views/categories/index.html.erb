<% title "Categories" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for category in @categories %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to button(:view), category %></td>
      <td><%= edit_button_for [ category ] %></td>
      <td><%= delete_button_for [ category ] %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Category", [:new, :category] %></p>
