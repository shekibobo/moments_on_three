#photos
  = will_paginate @photos
  - for photo in @photos
    %div{ :class => "photo #{photo.orientation}"}
      .control
        = link_to (image_tag "icons/thumb_up.png", :class => 'button'), ""

        - if admin_signed_in?
          = link_to (image_tag "icons/edit.png", :class => 'button'),
              [:edit, @gallery, photo]
          = link_to (image_tag "icons/delete.png", :class => 'button'),
              [@gallery, photo], :confirm => 'Are you sure?', :method => :delete
      = link_to (image_tag photo.image.url(:small)),
        photo.image.url, :rel => "lightbox[#{@gallery.name}]"
