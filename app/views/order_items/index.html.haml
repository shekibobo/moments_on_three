- title "Order Items"

%table
  %tr
    %th Order
    %th Quantity
  - for order_item in @order_items
    %tr
      %td= order_item.order_id
      %td= order_item.quantity
      %td= link_to 'Show', order_item
      %td= link_to 'Edit', edit_order_item_path(order_item)
      %td= link_to 'Destroy', order_item, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Order Item", new_order_item_path
